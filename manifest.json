{
  "manifest_version": 3,
  "name": "PowerSchool Revamped",
  "description": "A modern redesign of the PowerSchool interface",
  "version": "1.0",
  "icons": {
    "128": "src/assets/logo-128.png"
  },

  "content_scripts": [
    {
      "run_at": "document_end",
      "js": ["dist/bundle.js"],
      "matches": ["https://*.powerschool.com/guardian/*"]
    },
    {
      "css": ["src/pages/all.css"],
      "matches": ["https://*.powerschool.com/guardian/*"],
      "run_at": "document_start"
    }
  ]
}
